<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--font size-->
    <style name="StyleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>

    <style name="StyleMenu" parent="StyleContent">
        <item name="android:textSize">@dimen/font_size_menu</item>
    </style>

    <!-- Padding style -->
    <style name="paddingLayout">
        <item name="android:padding">10dp</item>
    </style>

    <style name="marginLayout">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="marginItem">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="tabbarLinear">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabbarImage">
        <item name="android:layout_width">@dimen/bottom_icon</item>
        <item name="android:layout_height">@dimen/bottom_icon</item>
        <item name="android:layout_margin">@dimen/padding_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="tabbarLine">
        <item name="android:layout_width">@dimen/bottom_line_width</item>
        <item name="android:layout_height">@dimen/bottom_line_height</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@color/colorDarkBlue</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">@dimen/progress_bar_min_height</item>
        <item name="android:maxHeight">@dimen/progress_bar_max_height</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
    </style>

    <style name="iconSmall">
        <item name="android:layout_width">@dimen/icon_small</item>
        <item name="android:layout_height">@dimen/icon_small</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="iconMedium">
        <item name="android:layout_width">@dimen/icon_medium</item>
        <item name="android:layout_height">@dimen/icon_medium</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="tabMoreLinear">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_null_gray_selector</item>
    </style>

    <style name="activityUserProfileText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_edittext</item>
    </style>

    <style name="activityUserProfileEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="activityUserProfileLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_ll2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ThemeSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="colorAccent">@color/colorLineTabMore</item>
        <item name="colorControlNormal">@color/colorLineTabMore</item>
        <item name="android:textColor">@color/colorTextGray</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line</item>
        <item name="android:background">@color/colorLineTabMore</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
