<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Padding style -->
    <style name="paddingLayout">
        <item name="android:padding">10dp</item>
    </style>

    <style name="marginLayout">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="marginItem">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="tabbarLinear">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabbarImage">
        <item name="android:layout_width">@dimen/bottom_icon</item>
        <item name="android:layout_height">@dimen/bottom_icon</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="tabbarLine">
        <item name="android:layout_width">@dimen/bottom_line_width</item>
        <item name="android:layout_height">@dimen/bottom_line_height</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@color/colorDarkBlue</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">@dimen/progress_bar_min_height</item>
        <item name="android:maxHeight">@dimen/progress_bar_max_height</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
    </style>
</resources>
